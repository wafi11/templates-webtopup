{
  "name": "template-app",
  "version": "1.0.0",
  "private": true,
  "description": "Fullstack monorepo with Next.js frontend and NestJS backend",
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "build": "pnpm run --filter frontend build && pnpm run --filter backend build",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "start": "pnpm run --parallel start",
    "start:frontend": "pnpm --filter frontend start",
    "start:backend": "pnpm --filter backend start",
    "lint": "pnpm run --parallel lint",
    "test": "pnpm run --parallel test",
    "clean": "pnpm -r exec rm -rf node_modules dist .next",
    "types:build": "pnpm --filter @repo/types build",
    "types:dev": "pnpm --filter @repo/types dev",
    "db:generate": "pnpm --filter backend db:generate",
    "db:migrate": "pnpm --filter backend db:migrate",
    "db:push": "pnpm --filter backend db:push",
    "db:studio": "pnpm --filter backend db:studio"
  },
  "keywords": [
    "monorepo",
    "nextjs",
    "nestjs",
    "fullstack"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.13.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "dayjs": "^1.11.19",
    "eslint": "^9.39.2",
    "nanoid": "^5.1.6",
    "prettier": "^3.8.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "typescript": "^5.9.3"
  }
}
